<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
        default-init-method="init" default-destroy-method="destroyBean">
    <context:annotation-config />
    <context:component-scan base-package="tutorial"/>

    <bean id="parentTriangle" class="tutorial.Triangle" abstract="true">
        <property name="points">
            <list>
                <ref bean="pointA"/>
            </list>
        </property>
    </bean>

    <bean id="triangle" class="tutorial.Triangle" parent="parentTriangle" init-method="init" destroy-method="destroyBean">
        <property name="points">
            <list merge="true">
                <ref bean="pointB"/>
                <ref bean="pointC"/>
            </list>
        </property>
    </bean>

    <bean id="pointA" class="tutorial.Point">
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="pointB" class="tutorial.Point">
        <property name="x" value="-20"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="pointC" class="tutorial.Point">
        <property name="x" value="0"/>
        <property name="y" value="20"/>
    </bean>

    <alias name="triangle" alias="triangle-alias"/>

</beans>